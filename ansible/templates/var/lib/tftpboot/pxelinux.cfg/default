default vesamenu.c32
prompt 0
timeout 30
menu title PXE Boot Menu
label Centos 7 Kickstart install
  menu label ^1) Kickstart CentOS 7 x64 install
  kernel centos7/vmlinuz
  append initrd=centos7/initrd.img ks=http://{{ pxe_kickstart_host }}/kickstart?centos7
label Centos 7 Manual install
  menu label ^2) Manual CentOS 7 x64 install
  kernel centos7/vmlinuz
  append initrd=centos7/initrd.img method=http://{{ pxe_kickstart_host }}/CentOS-7-x86_64-Minimal-1511 devfs=nomount
label Memtest
  menu label ^3) Memtest
  kernel memtest/memtest
